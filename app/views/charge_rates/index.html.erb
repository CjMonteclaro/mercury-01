<p id="notice"><%= notice %></p>

<h1>Charge Rates</h1>

<table>
  <thead>
    <tr>
      <th>Charge type</th>
      <th>Qualifier</th>
      <th>Rate</th>
      <th>Rate type</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @charge_rates.each do |charge_rate| %>
      <tr>
        <td><%= charge_rate.charge_type_id %></td>
        <td><%= charge_rate.qualifier %></td>
        <td><%= charge_rate.rate %></td>
        <td><%= charge_rate.rate_type %></td>
        <td><%= link_to 'Show', charge_rate %></td>
        <td><%= link_to 'Edit', edit_charge_rate_path(charge_rate) %></td>
        <td><%= link_to 'Destroy', charge_rate, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

