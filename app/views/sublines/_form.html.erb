
<%= simple_form_for(@subline) do |f| %>
  <%= f.error_notification %>
  <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>

  <div class="form-inputs">
    <%= f.input :line_id %>
    <%= f.input :name %>
    <%= f.input :shortname %>
    <%= f.input :from %>
    <%= f.input :to %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
