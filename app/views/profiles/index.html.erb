<p id="notice"><%= notice %></p>

<h1>Profiles</h1>

<table>
  <thead>
    <tr>
      <th>User</th>
      <th>First name</th>
      <th>Middle name</th>
      <th>Last name</th>
      <th>Birthdate</th>
      <th>Address 1</th>
      <th>Address 2</th>
      <th>City</th>
      <th>Province</th>
      <th>Phone</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @profiles.each do |profile| %>
      <tr>
        <td><%= profile.user_id %></td>
        <td><%= profile.first_name %></td>
        <td><%= profile.middle_name %></td>
        <td><%= profile.last_name %></td>
        <td><%= profile.birthdate %></td>
        <td><%= profile.address_1 %></td>
        <td><%= profile.address_2 %></td>
        <td><%= profile.city_id %></td>
        <td><%= profile.province_id %></td>
        <td><%= profile.phone %></td>
        <td><%= link_to 'Show', profile %></td>
        <td><%= link_to 'Edit', edit_profile_path(profile) %></td>
        <td><%= link_to 'Destroy', profile, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Profile', new_profile_path %>
