
<%= simple_form_for(@premium) do |f| %>
  <%= f.error_notification %>
  <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>

  <div class="form-inputs">
    <%= f.input :subline_id %>
    <%= f.input :peril_id %>
    <%= f.input :subline_factor %>
    <%= f.input :coverage_limit %>
    <%= f.input :coverage_duration %>
    <%= f.input :premium %>
    <%= f.input :prem_type %>
    <%= f.input :taxed %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
