<p id="notice"><%= notice %></p>

<h1>Premiums</h1>
<table class="table">
  <thead>
    <tr>
      <th>ID</th>
      <th>Subline</th>
      <th>Peril</th>
      <th>Subline factor</th>
      <th>Coverage limit</th>
      <th>Coverage duration</th>
      <th>Premium</th>
      <th>Prem type</th>
      <th>Taxed</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @premiums.each do |premium| %>
      <tr>
        <td><%= premium.id %></td>
        <td><%= premium.sublinename %></td>
        <td><%= premium.perilname %></td>
        <td><%= premium.subline_factor %></td>
        <td><%= premium.coverage_limit %></td>
        <td><%= premium.coverage_duration %></td>
        <td><%= premium.premium %></td>
        <td><%= premium.prem_type %></td>
        <td><%= premium.taxed %></td>
        <td><%= link_to 'Show', premium %></td>
        <td><%= link_to 'Edit', edit_premium_path(premium) %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Premium', new_premium_path %>

<h2>Import Premiums</h2>
<%= form_tag import_premiums_path, multipart: true do %>
  <%= file_field_tag :file %>
  <%= submit_tag "Import" %>
<% end %>

<%= paginate @premiums, theme: 'twitter-bootstrap-4' %>
