<div class="nested-fields row">
  <%= f.association :peril, label: false, wrapper_html: { class: 'col-sm-8' }, input_html: { class: 'select-peril'} %>
  <%= f.input :sum_insured, label: false, placeholder: 'Coverage Limit', wrapper_html: { class: 'col-sm-8' } %>
  <%= f.association :premium, label: false, collection: Premium.all.where(peril_id: '7,8').collect(&:coverage_limit), wrapper_html: { class: 'col-sm-8' }, input_html: { class: 'hidden premium'} %>
  <div class="col-sm-4 py-1">
    <%= link_to_remove_association "remove peril", f, class: 'btn btn-secondary btn-sm text-white' %>
  </div>
</div>
