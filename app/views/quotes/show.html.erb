<p id="notice"><%= notice %></p>

<div class="card">
  <div class="card-header">
    <p class=" h3 font-weight-bold pt-3">
      <%= "Subline: #{@quote.subline.policy_type}" %>
    </p>  
    <p class="lead">
      <%= "Vehicle: #{@quote.subline.name}" %>
    </p> 
  </div>
  <div class="card-body">
    <h5 class="card-title">Assured Name</h5>
    <table class="table">
      <thead>
        <th>Perils Covered</th>
        <th>Coverage Limit</th>
        <th>Coverage Duration (Years)</th>
        <th>Net Premium</th>
        <th>Total Charges</th>
        <th>Gross Premium</th>
      </thead>
      <tbody>
      <tr>
        <td><%= @quote.peril.name %></td>
        <td><%= @quote.coverage_limit %></td>
        <td><%= @quote.coverage_duration %></td>
        <td><%= @quote.base_prem %></td>
        <td><%= @quote.total_charges %></td>
        <td><%= @quote.gross_prem %></td>
      </tbody>
    </table>
  </div>
</div>

<div class="float-right pt-3">
  <%= link_to 'Edit', edit_quote_path(@quote) , class: 'btn btn-secondary text-white'%> |
  <%= link_to 'Back', quotes_path, class: 'btn btn-secondary text-white' %>
</div>
