<p id="notice"><%= notice %></p>

<h1>Quotes</h1>

<table class="table">
  <thead>
    <tr>
      <th>ID</th>
      <th>Subline</th>
      <th>Perils</th>
      <th>Premium</th>
      <th>Coverage limit</th>
      <th>Coverage duration</th>
      <th>Base prem</th>
      <th>Total charges</th>
      <th>Gross prem</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @quotes.each do |quote| %>
      <tr>
        <td><%= quote.id %></td>
        <td><%= quote.subline.policy_type %></td>
        <td>
          <% quote.perils.each do |peril|%>
            <%= content_tag :p, peril.name %>
          <% end %>  
        </td>
        <td><%= quote.premium_id %></td>
        <td><%= quote.coverage_limit %></td>
        <td><%= quote.coverage_duration %></td>
        <td><%= quote.base_prem %></td>
        <td><%= quote.total_charges %></td>
        <td><%= quote.gross_prem %></td>
        <td><%= link_to 'Show', quote , class: 'btn btn-primary text-white' %></td>
        <td><%= link_to 'Edit', edit_quote_path(quote), class: 'btn btn-secondary text-white' %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Quote', new_quote_path, class: 'btn btn-secondary text-white' %>
